---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Desarrolladora web frontend +2 de años de experiencia"
		/>
		<meta name="keywords" content="Desarrollo, programación, web" />
		<meta name="author" content="Pereyra Paula" />
		<meta name="robots" content="index, follow" />
		<meta name="theme-color" content="#ffffff" />
		<meta property="og:title" content="Portfolio - Pereyra Paula" />
		<meta
			property="og:description"
			content="Desarrolladora web frontend +2 de años de experiencia"
		/>
		<meta property="og:image" content="/images/profile.webp" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="Título para Twitter" />
		<meta
			name="twitter:description"
			content="Desarrolladora web frontend +2 de años de experiencia"
		/>
		<meta name="twitter:image" content="/images/profile.webp" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	section {
		max-width: 700px;
		margin: 0 auto 48px;
	}

	h2 {
		margin-bottom: 8px;
		font-weight: 700;
		line-height: 1.5;
		font-size: 1.5rem;
	}

	@media (width <= 700px) {
		section {
			margin-bottom: 38px;
			padding: 0 24px;
		}
	}

	.print {
		display: none !important;
	}

	@media print {
		.no-print {
			display: none !important;
		}

		.print {
			display: block !important;
		}

		astro-dev-toolbar {
			display: none !important;
		}

		article {
			break-inside: avoid;
		}
	}
</style>
