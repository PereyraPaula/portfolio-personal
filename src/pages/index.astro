---
import About from "@/components/About.astro";
import Education from "@/components/Education.astro";
import Experience from "@/components/Experience.astro";
import Header from "@/components/Header.astro";
import KeyboardManager from "@/components/KeyboardManager.astro";
import Projects from "@/components/Projects.astro";
import Skills from "@/components/Skills.astro";
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Paula Pereyra | Portfolio">
	<main>
		<Header />
		<About />
		<Experience />
		<Education />
		<Projects />
		<Skills />
	</main>
	<KeyboardManager />
</Layout>

<style is:global>
	html {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			"Courier New",
			Courier,
			monospace;
		background: #fff;
		letter-spacing: -0.025rem;
	}

	body,
	figure {
		margin: 0;
		padding: 0;
	}

	a {
		text-decoration: none;
	}

	ul {
		list-style: none;
		margin: 0;
		padding: 0;
	}

	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}

	h1,
	h2,
	h3,
	h4 {
		margin: 0;
		font-family:
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			"Segoe UI",
			Roboto,
			Oxygen,
			Ubuntu,
			Cantarell,
			"Open Sans",
			"Helvetica Neue",
			sans-serif;
	}

	p {
		color: #666;
		font-size: 0.9rem;
		line-height: 1.5;
		margin: 0;
		text-wrap: pretty;
	}
</style>
